        <GroupBox Header="Users" Style="{StaticResource GroupboxStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Border Style="{StaticResource DefaultBorder}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl HorizontalContentAlignment="Stretch"
                                      ItemsSource="{Binding Users}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource DefaultBorder}">
                                        <DockPanel LastChildFill="False" Height="55">
                                            <Image DockPanel.Dock="Left"
                                                   Height="45"
                                                   Width="45"
                                                   Source="{Binding Image}"
                                                   Margin="1" />
                                            <TextBlock DockPanel.Dock="Left"
                                                       Margin="0, 5, 0, 0"
                                                       FontSize="12"
                                                       FontWeight="Bold"
                                                       Text="{Binding UserName}" />
                                            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                                    Margin="5, 0"
                                                    DockPanel.Dock="Right"
                                                    Width="30"
                                                    Height="30"
                                                    Padding="0"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    cm:Message.Attach="[OnUserRemoveClick($this)]">
                                                <materialDesign:PackIcon
                                                    Kind="Delete"
                                                    Width="20"
                                                    Height="20" />
                                            </Button>
                                            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                                    Margin="5, 0"
                                                    DockPanel.Dock="Right"
                                                    Width="30"
                                                    Height="30"
                                                    Padding="0"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    cm:Message.Attach="[OnUserEditClick($this)]">
                                                <materialDesign:PackIcon
                                                    Kind="Pencil"
                                                    Width="20"
                                                    Height="20" />
                                            </Button>
                                        </DockPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
                <StackPanel Grid.Row="1" HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button Margin="10, 5"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Width="250"
                            Content="Add"
                            cm:Message.Attach="[OnUserAddClick]"/>
                </StackPanel>
            </Grid>
        </GroupBox>

    </Grid>
</Window>